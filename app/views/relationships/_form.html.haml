= form_for @relationship do |f|
  - if @relationship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relationship.errors.count, "error")} prohibited this relationship from being saved:"
      %ul
        - @relationship.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :ratio
    = f.text_field :ratio

  .field
    = f.label :wine_sort_id
    = f.select :wine_sort_id,
    options_for_select(WineSort.all.map{ |g| [g.name + " " + g.color + " " + g.type_of_wine, g.id] })
  .field
    = f.label :grape_sort_id
    = f.select :grape_sort_id,
      options_for_select(GrapeSort.all.map{ |g| [g.name, g.id] })

  .actions
    = f.submit 'Сохранить', class: 'btn btn-primary'
  %p
